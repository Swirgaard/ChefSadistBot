    user_id = message_or_callback.from_user.id
    session = get_user_session(user_id)
    session['last_menu'] = 'main'
    logging.info(f"–ö–æ–Ω—Ç–µ–∫—Å—Ç –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {user_id} —Å–±—Ä–æ—à–µ–Ω –Ω–∞ 'main'.")
    
