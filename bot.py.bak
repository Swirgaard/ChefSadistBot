    USER_SESSIONS[message.from_user.id] = get_user_session(message.from_user.id)
    start_text = (
        "–ü—Ä–∏–≤–µ—Ç, —è ‚Äî –ö–∏—Ä–∞... (—Ç–µ–∫—Å—Ç –±–µ–∑ –∏–∑–º–µ–Ω–µ–Ω–∏–π)"
    )
    await show_main_menu(message, start_text)

@dp.callback_query(F.data == "back_to_main")
